    {
        var x = 0;
        var data = [[],[],[],[],[],[],[],[]];
        for(textIndex in 0...text.length) {
            var letter = text.charAt(textIndex).toLowerCase();
            var dataIndex = 0;
            for(line in alphabet[letter]) {
                var letterIndex = 0;
                for(val in line) {
                    data[dataIndex][letterIndex + x] = val;
                    letterIndex++;
                }
                dataIndex++;
            }
            x += alphabet[letter][0].length;
        }

        return data;
    }

